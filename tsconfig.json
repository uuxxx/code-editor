{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@store": ["src/redux"],
      "@store/*": ["src/redux/*"],
      "@bundler": ["src/bundler"],
      "@bundler/*": ["src/bundler/*"],
    },
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src", ".eslintrc.js", "webpack.config.js"],
  "exclude": ["node_modules"]
}
